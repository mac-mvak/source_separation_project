{
  "name": "default_config",
  "n_gpu": 1,
  "preprocessing": {
    "sr": 16000,
    "spectrogram": {
      "type": "MelSpectrogram",
      "args": {
      }
    },
    "log_spec": true
  },
  "augmentations": {
    "wave": [],
    "spectrogram": []
  },
  "arch": {
    "type": "SpEx_Plus",
    "args": {
      "num_spks" : 101,
      "causal" : true
    }
  },
  "data": {
    "train": {
      "batch_size": 6,
      "num_workers": 2,
      "datasets": [
        {
          "type": "MixedDataset",
          "args": {
            "part": "train"
          }
        }
      ]
    },
    "val": {
      "batch_size": 10,
      "num_workers": 2,
      "datasets": [
        {
          "type": "MixedDataset",
          "args": {
            "part": "val"
          }
        }
      ]
    }
  },
  "optimizer": {
    "type": "Adam",
    "args": {
      "lr": 3e-4,
      "weight_decay": 1e-5
    }
  },
  "loss": {
    "type": "SpexLoss",
    "args": {"alpha": 0.1,
            "beta": 0.1,
            "gamma": 0.5}
  },
  "metrics": [
    {
      "type": "SISDRMetric",
      "args": {
        "name": "SI-SDR"
      }
    },
    {
      "type": "PESQMetric",
      "args": {
        "name": "PESQ"
      }
    }
  ],
  "lr_scheduler": {
    "type": "OneCycleLR",
    "args": {
            "steps_per_epoch": 1000,
            "epochs": 50,
            "anneal_strategy": "cos",
            "max_lr": 1e-3,
            "pct_start": 0.075
        }
  },
  "trainer": {
    "epochs": 50,
    "save_dir": "saved/",
    "save_period": 5,
    "verbosity": 2,
    "monitor": "min val_loss",
    "early_stop": 100,
    "visualize": "wandb",
    "wandb_project": "ss_project",
    "len_epoch": 1000,
    "grad_norm_clip": 10
  }
}
